{
	"cSpell.ignorePaths": [
		".git/{index,*refs,*HEAD}",
		".git/{info,lfs,logs,refs,objects}/**",
		".vscode",
		".vscode-insiders",
		"SIGUE Google-Sync.sln",
		"SIGUE Google-Sync/Config.daml",
		"SIGUE Google-Sync/SIGUE Google-Sync.csproj",
		"node_modules",
		"package-lock.json",
		"vscode-extension"
	],
	"cSpell.words": ["Addin", "EAAB", "EPSG", "esri", "Wkid"],
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit",
		"source.removeUnused": "explicit"
	},
	"editor.detectIndentation": false,
	"editor.formatOnSave": true,
	"files.associations": {
		"*.config": "xml",
		"*.daml": "xml",
		"*.xaml": "xml"
	},
	"files.autoSave": "afterDelay",
	"github.copilot.enable": {
		"*": true,
		"plaintext": false,
		"markdown": true,
		"scminput": false
	},
	"csharpOrganizeUsings.disableUnusedUsingsRemoval": false,
	"[xml]": {
		"editor.tabSize": 2
	},
	"[markdown]": {
		"editor.wordWrap": "off"
	},
	"xml.format.maxLineWidth": 280
}
